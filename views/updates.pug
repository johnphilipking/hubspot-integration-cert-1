html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 #{title}
        a(href="/") Return to the homepage

        h2 Update Form 

        form.update-form(action="/update-cobj" method="POST")
            label Artist Name
            input(type="text" name="name" placeholder="" required)
            label Artist Type
            input(type="text" name="artist_type" placeholder="" required)
            label Artist Work Example
            input(type="text" name="artist_work" placeholder="" required)
            input(type="submit")
